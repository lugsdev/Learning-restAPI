{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "checkJs": true,
    "noUnusedLocals": true,
    "skipLibCheck": false,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": ".",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@models/*": [
        "models/*"
      ]
    }
  }
}